run_as <%= node['rstudio']['shiny']['user'] %>;

server {
  listen <%= node['rstudio']['shiny']['www_port'] %> <%= node['rstudio']['shiny']['www_address'] %>;

  location / {
    site_dir <%= node['rstudio']['shiny']['site_dir'] %>;
    log_dir <%= node['rstudio']['shiny']['log_dir'] %>;
    directory_index <%= node['rstudio']['shiny']['directory_index'] %>;
  }
}
